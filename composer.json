{
    "name": "prophets/drupal-jsonapi",
    "type": "library",
    "description": "ORM for consuming Drupal with the JSON API module.",
    "keywords": [
        "Prophets",
        "DrupalJsonApi",
        "Laravel",
        "JSON API"
    ],
    "homepage": "https://github.com/Prophets/DrupalJsonApi",
    "license": "MIT",
    "authors": [
        {
            "name": "Stijn Huyberechts",
            "email": "stijnhuyberechts@gmail.com",
            "homepage": "https://github.com/huyby",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/prophets/yang"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~7.0",
        "php-http/guzzle6-adapter": "^1.1.0",
        "woohoolabs/yang": "dev-feature/relation-resourceobject-meta"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Prophets\\DrupalJsonApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prophets\\DrupalJsonApi\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
